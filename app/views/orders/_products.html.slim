div data-role="panel" id="products" data-position="right" data-display="overlay"  data-theme="b"
  center
    label id="actor" nobody
  button id="remove"  class="ui-btn ui-corner-all" gone
  button id="unknown" class="ui-btn ui-corner-all" thinking
  button id="nothing" class="ui-btn ui-corner-all" nothing

  form
    input data-type="search" id="filterProducts"

  div data-role="controlgroup" data-filter="true" data-input="#filterProducts" id="productButtons"
    - @products.each do |product|
      button class="ui-btn ui-shadow ui-corner-all" = product.name
